{{!-- Image Carousel --}}
<div id="carDiv">
  <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/img/mice/m1.jpg" class="d-block vh-2 vw-2" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/img/keyboards/k1.jpg" class="d-block vh-2 vw-2" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/img/gaming_systems/ps41.jpg" class="d-block vh-2 vw-2" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/img/monitors/mt1.jpg" class="d-block vh-2 vw-2" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
      data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
      data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

<!-- Show All Categories: -->
<div class="container"></div>
<div class="row"></div>
<div class="col-10  d-flex flex-row align-items-center justify-content-center">
  {{#each categories as |cat| }}

  <div class="card" style="width: 18rem;">
    <img src="{{cat.img_url}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{cat.category_name}}</h5>
      <p class=""></p>
      <p class="card-text"></p>
      <a href="#" class="btn btn-primary">See Product</a>
    </div>
  </div>

  {{/each}}
</div>
</div>
</div>